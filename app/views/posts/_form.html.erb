<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> 件の入力エラーがあります:</h2>
      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :text, :class => 'require' %>
    <%= f.text_field :text %>
  </div>
  <div class="field">
    <%= f.label :publishing_policy %>
    <%= f.select :publishing_policy, Post.publishing_policies.keys,{selected: 'unlimited'} %>
  </div>
  <%= f.fields_for :images do |image_form| %>
    <div class="field">
      <%= image_form.label :image_data %>
      <%= image_form.file_field :image %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
