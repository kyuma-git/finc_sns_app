<%= form_for(post, data: { remote: true }) do |f| %>
  <div class="card m-2" style="width: 40%; min-height: 250px; position:relative; left: 30%;">
      <div class="card-body">
        <div class="field">
          <%= f.text_field :text, :class => 'text_input',placeholder: "いまどうしてる？"%>
        </div>
        <div class="field">
          <%= f.label :publishing_policy %>
          <%= f.select :publishing_policy, Post.publishing_policies.keys,{selected: 'unlimited'} %>
        </div>
        <%= f.fields_for :images do |image_form| %>
          <div class="field">
            <%= image_form.label :image_data %>
            <%= image_form.file_field :image %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit %>
        </div>
      </div>
  </div>
<% end %>
