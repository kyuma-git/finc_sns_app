<% if user_signed_in? %>
<h1>フォローしているユーザの投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th>投稿内容</th>
      <th>公開設定</th>
      <th>投稿主</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.text %></td>
        <td><%= post.browse_status %></td>
        <td>
          <%= link_to user_path(post.user) do %>
            <%= post.user.name %>
          <% end %>
        </td>
        <td><%= link_to '投稿詳細', post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '今何してる？', new_post_path %>

<% else %>

<h1>全ユーザの投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th>投稿内容</th>
      <th>公開設定</th>
      <th>投稿主</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.text %></td>
        <td><%= post.browse_status %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to '投稿詳細', post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% end %>

